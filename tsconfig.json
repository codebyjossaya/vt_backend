{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": ".",
    "rootDir": "."
  },
  "include": ["*.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}